# Setup FireFly for all organizations
setup-firefly: check-network setup-firefly-org1 setup-firefly-org2
    #!/usr/bin/env bash
    echo ""
    echo "=========================================="
    echo "FireFly Setup Complete!"
    echo "=========================================="
    echo ""
    echo "Complete stack deployed for both organizations:"
    echo "  ✓ FabConnect (blockchain connector) with registered identities"
    echo "  ✓ Data plugins (IPFS, DataExchange)"
    echo "  ✓ FireFly Core"
    echo "  ✓ FireFly Sandbox"
    echo ""
    echo "Next step: Register FireFly network identities"
    echo "  just register-firefly-identities"
    echo ""
    echo "FireFly Web UI:"
    echo "  Org1: https://firefly-org1.localho.st/ui"
    echo "  Org2: https://firefly-org2.localho.st/ui"
    echo ""
    echo "FireFly Sandbox:"
    echo "  Org1: https://firefly-sandbox-org1.localho.st"
    echo "  Org2: https://firefly-sandbox-org2.localho.st"
    echo ""
    echo "FireFly REST APIs:"
    echo "  Org1: https://firefly-org1.localho.st/api/v1"
    echo "  Org2: https://firefly-org2.localho.st/api/v1"
    echo ""
    echo "Or use kubectl port-forward:"
    echo "  kubectl port-forward -n org1 svc/firefly-org1 5000:5000 &"
    echo "  kubectl port-forward -n org2 svc/firefly-org2 5000:5000 &"
    echo "  Then: http://localhost:5000/api/v1"
    echo ""

# Register FireFly identities (organizations and nodes)
register-firefly-identities: check
    #!/usr/bin/env bash
    set -e
    echo "=========================================="
    echo "Registering FireFly Identities"
    echo "=========================================="
    echo ""
    
    # Wait for FireFly pods to be ready
    echo "Waiting for FireFly pods to be ready..."
    kubectl wait --for=condition=ready pod -l app=firefly -n org1 --timeout=300s
    kubectl wait --for=condition=ready pod -l app=firefly -n org2 --timeout=300s
    echo "✓ FireFly pods are ready"
    echo ""
    
    # Register Org1
    echo "Registering Org1..."
    export NAMESPACE=org1
    cat {{justfile_directory()}}/kind/firefly/firefly-init-job.yaml | envsubst | kubectl apply -f -
    
    # Register Org2
    echo "Registering Org2..."
    export NAMESPACE=org2
    cat {{justfile_directory()}}/kind/firefly/firefly-init-job.yaml | envsubst | kubectl apply -f -
    
    echo ""
    echo "Registration jobs submitted!"
    echo ""
    echo "Monitor progress:"
    echo "  kubectl logs -f -n org1 job/firefly-init-org1"
    echo "  kubectl logs -f -n org2 job/firefly-init-org2"
    echo ""
    echo "Verify organizations:"
    echo "  kubectl exec -n org1 deployment/firefly-org1 -- curl -s http://localhost:5000/api/v1/network/organizations"
    echo ""

# Stop all FireFly deployments
firefly-stop: check
    #!/usr/bin/env bash
    echo "Stopping FireFly deployments..."
    kubectl delete deployment firefly-org1 -n org1 2>/dev/null || true
    kubectl delete deployment firefly-org2 -n org2 2>/dev/null || true
    echo "Stopping FabConnect deployments..."
    kubectl delete deployment fabconnect-org1 -n org1 2>/dev/null || true
    kubectl delete deployment fabconnect-org2 -n org2 2>/dev/null || true
    echo "Stopping data plugin deployments..."
    kubectl delete deployment firefly-dataexchange-org1 -n org1 2>/dev/null || true
    kubectl delete deployment firefly-dataexchange-org2 -n org2 2>/dev/null || true
    kubectl delete deployment ipfs-org1 -n org1 2>/dev/null || true
    kubectl delete deployment ipfs-org2 -n org2 2>/dev/null || true
    echo "FireFly deployments stopped"

###############################################################################
# Complete end-to-end setup workflows
###############################################################################

# Setup complete Fabric network (kind + orgs + channel + chaincode)
setup-network: check
    #!/usr/bin/env bash
    set -e
    echo "================================"
    echo "Setting up Fabric network"
    echo "================================"

    # Create KIND cluster
    echo "Creating KIND cluster..."
    just kind

    # Start all organizations
    echo "Starting organizations..."
    just start-network

    # Enroll users
    echo "Enrolling users..."
    just enroll org0
    just enroll org1
    just enroll org2

    # Verify network health
    echo "Checking network..."
    just check-network

    # Build consortium and channel
    echo "Building consortium..."
    just gather-msp
    just create-genesis-block

    echo "Joining organizations to channel..."
    just join org0
    just join org1
    just join org2

# Setup and deploy chaincodes (CCAAS - Chaincode as a Service)
setup-chaincode: check-network
    #!/usr/bin/env bash
    set -e
    echo "================================"
    echo "Setting up chaincodes (CCAAS)"
    echo "================================"

    # Step 1: Build CCAAS packages
    echo ""
    echo "Step 1: Building CCAAS packages..."
    just build-all-cc

    # Step 2: Deploy chaincode services
    echo ""
    echo "Step 2: Deploying chaincode services to Kubernetes..."
    just deploy-cc-services

    # Wait for services to be ready
    echo ""
    echo "Waiting for chaincode services to be ready..."
    sleep 5

    # Step 3: Install on peers
    echo ""
    echo "Step 3: Installing chaincodes on peers..."
    just install-all-cc

    echo ""
    echo "================================"
    echo "Chaincode setup complete!"
    echo "================================"

# Complete production setup (network + chaincode + firefly)
setup-complete: setup-network setup-chaincode setup-firefly register-firefly-identities
    #!/usr/bin/env bash
    echo ""
    echo "=========================================="
    echo "Complete Setup Finished!"
    echo "=========================================="
    echo ""
    echo "Fabric Network:"
    echo "  - Orderer (org0):  org0-orderer-orderer.org0.localho.st:443"
    echo "  - Org1 Peers:      org1-peer1-peer.org1.localho.st:443"
    echo "  - Org2 Peers:      org2-peer1-peer.org2.localho.st:443"
    echo ""
    echo "Chaincodes (CCAAS):"
    echo "  - pm3package:      PM3 Package Management"
    echo "  - firefly-go:      FireFly Fabric Connector"
    echo ""
    echo "FireFly (with identity registration):"
    echo "  - Org1 UI:         https://firefly-org1.localho.st"
    echo "  - Org2 UI:         https://firefly-org2.localho.st"
    echo "  - Org1 API:        https://firefly-org1.localho.st/api/v1"
    echo "  - Org2 API:        https://firefly-org2.localho.st/api/v1"
    echo ""
    echo "Test messaging:"
    echo "  kubectl exec -n org1 deployment/firefly-org1 -- curl -X POST \\"
    echo "    http://localhost:5000/api/v1/namespaces/default/messages/broadcast \\"
    echo "    -H 'Content-Type: application/json' \\"
    echo "    -d '{\"data\": [{\"value\": \"Hello from Org1!\"}]}'"
    echo ""
    echo "View logs:"
    echo "  kubectl logs -n org1 -l app=firefly"
    echo "  kubectl logs -n org2 -l app=firefly"
    echo ""
    echo "Manage:"
    echo "  just check-network       # Check network health"
    echo "  just status-cc-services  # Check chaincode services"
    echo "  just destroy            # Clean up everything"
    echo ""

# Display env for targeting a peer with the Fabric binaries
show-context msp org peer:
    #!/usr/bin/env bash
    . {{CWDIR}}/scripts/utils.sh
    appear_as {{msp}} {{org}} {{peer}}

    # use export to load the peer context into the current environment:
    # export $(just show-context Org1MSP org1 peer1)
    printenv | egrep "CORE_PEER|FABRIC_|ORDERER_" | sort
