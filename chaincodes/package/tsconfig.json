{
    "compilerOptions": {
      "target": "ES2019",
      "module": "CommonJS",
      "moduleResolution": "Node",
      "rootDir": "src",
      "outDir": "dist",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "sourceMap": false,
  
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "useDefineForClassFields": false
    },
    "include": ["src"]
}
  